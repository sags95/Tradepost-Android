<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_default">
    </include>

    <include
        layout="@layout/single_listing_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/single_listing_header"
        android:layout_below="@+id/tool_bar"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/single_listing_scroll"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/single_listing_header"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_listing_img_layout"
                >


                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    >
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dots"
                    android:layout_alignBottom="@+id/pager"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="4dp"

                    />


            </RelativeLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/offer_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_plus_icon"
                android:layout_alignBottom="@+id/single_listing_img_layout"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-28dp"
                android:layout_marginRight="16dp"
                app:backgroundTint="@color/ColorPrimary"
                app:fabSize="normal"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/single_listing_other_layout"
                android:layout_below="@+id/single_listing_img_layout"
                android:background="@color/lightgrey"
                android:paddingTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <TextView
                    android:id="@+id/single_listing_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I want"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"

                    />

                <LinearLayout
                    android:id="@+id/single_listing_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:layout_below="@+id/single_listing_text"

                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tag1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/single_listing_des_text"
                    android:layout_below="@+id/single_listing_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:background="@color/white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/single_listing_des_input"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="Sample Description"
                    android:layout_below="@+id/single_listing_des_text"
                    android:background="@color/white"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/single_listing_des_input"
                    />


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>