<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myOffers_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:focusable="true"
    android:clickable="true"
    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="16dp"
        android:paddingLeft="4dp"
        android:background="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/myOffers_itemImg"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:src="@drawable/sample_img2"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            />

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/myOffers_itemImg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Model.CustomTextView
                android:id="@+id/myOffers_itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ITEM TITLE"
                style="@style/OpenSansRegular"
                android:layout_marginBottom="8dp"
                android:minLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                />

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/myOffers_flowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Model.CustomTextView
                    android:id="@+id/myOffers_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:padding="4dp"
                    android:background="@drawable/tag_btn_shape"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    style="@style/OpenSansLight"
                    />


            </org.apmem.tools.layouts.FlowLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/myOffers_itemOfferCount_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >

            <Model.CustomTextView
                android:id="@+id/myOffers_offersCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/OpenSansSemiBold"
                android:text="4"
                android:layout_marginRight="4dp"
                android:textColor="@color/ColorPrimary"
                />

            <Model.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFFER(S)"
                style="@style/OpenSansRegular"
                />


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>