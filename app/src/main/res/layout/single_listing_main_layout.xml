<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/single_listing_img_layout"
            android:layout_alignParentTop="true"
            >


            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dots"
                android:layout_alignBottom="@+id/pager"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="4dp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/single_listing_other_layout"
            android:layout_below="@+id/single_listing_img_layout"
            android:background="@color/lightgrey"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            >

            <Model.CustomTextView
                android:id="@+id/single_listing_itemDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2km away"
                android:textColor="@color/white"
                android:background="@drawable/tag_btn_shape"
                android:layout_toRightOf="@+id/single_listing_itemCondition"
                android:layout_marginTop="8dp"
                style="@style/OpenSansLight"


                />

            <Model.CustomTextView
                android:id="@+id/single_listing_itemCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="condition"
                android:textColor="@color/white"
                android:background="@drawable/tag_btn_shape"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                style="@style/OpenSansLight"
                />

            <Model.CustomTextView
                android:id="@+id/single_listing_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                style="@style/OpenSansRegular"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/single_listing_itemCondition"

                />

            <Model.CustomTextView
                android:layout_below="@+id/single_listing_item_title"
                android:id="@+id/single_listing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOOKING FOR"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                style="@style/OpenSansRegular"


                />

            <LinearLayout
                android:id="@+id/single_listing_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/single_listing_text"

                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tag1"/>

            </LinearLayout>

            <Model.CustomTextView
                android:id="@+id/single_listing_des_text"
                android:layout_below="@+id/single_listing_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                style="@style/OpenSansSemiBold"

                />

            <Model.CustomTextView
                android:id="@+id/single_listing_des_input"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Sample Description"
                android:layout_below="@+id/single_listing_des_text"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                style="@style/OpenSansRegular"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/single_listing_des_input"
                />

        </RelativeLayout>



    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/fab_offers"
        app:backgroundTint="@color/fab_primaryColor"
        app:layout_anchor="@id/single_listing_img_layout"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>