<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkwhite"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp"
        android:background="@color/white"


        >




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_parentlayout"
            android:background="@color/white"

            >




            <ImageView

                android:id="@+id/item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:src="@drawable/sample_img2"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
            />

            <ImageView
                android:id="@+id/image_like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like_selected"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignTop="@+id/item_image"
                android:layout_alignRight="@+id/item_image"
                android:clickable="true"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pro_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/sample_img"
                android:layout_alignBottom="@+id/item_image"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="-24dp"
                android:layout_marginLeft="8dp"
                app:border_width="4dp"
                app:border_color="#FFFFFF" />

        <LinearLayout
            android:id="@+id/pro_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/item_image"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical|right"

            >

            <TextView
                android:id="@+id/pro_posted_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="10sp"
                android:text="Posted "
                android:maxLines="1"
                android:gravity="right"
            />

            <TextView
                android:id="@+id/pro_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="10sp"
                android:text="4 hours"
                android:maxLines="1"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/pro_ago_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="10sp"
                android:text=" ago"
                android:maxLines="1"
                android:gravity="right"
                />
    </LinearLayout>

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Title Line 1\nTitle Line 2"
                android:maxLines="2"
                android:layout_below="@+id/pro_bar"
                android:ellipsize="end"
            />

            <TextView
                android:id="@+id/looking_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOOKING FOR"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/item_title"
                />

            <org.apmem.tools.layouts.FlowLayout
                xmlns:f="http://schemas.android.com/apk/res-auto"
                android:id="@+id/marketplace_tags_layout"
                android:orientation="horizontal"
                f:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/looking_for"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                >

            </org.apmem.tools.layouts.FlowLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

