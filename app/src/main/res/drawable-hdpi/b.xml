<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/color_primary_dark" />
    <!-- pressed -->
    <item android:state_focused="true" android:drawable="@color/color_primary" />
    <!-- focused -->

    <item>
        <shape android:shape="rectangle" android:padding="10dp">
            <solid android:color="#0000" />

            <gradient android:startColor="#3300FF" android:endColor="#3300FF" android:angle="270" />

            <stroke android:width="4px" android:color="#80FFFFFF" />

        </shape>
    </item>
</selector>