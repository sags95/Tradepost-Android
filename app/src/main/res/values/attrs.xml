<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="typefaceAsset" format="string">
    </attr>

    <!-- Custom TextView -->
    <declare-styleable name="CustomTextView">
        <attr name="typefaceAsset" />
    </declare-styleable>

    <!-- Custom AutoCompleteTextView -->
    <declare-styleable name="CustomAutoCompleteTextView">
        <attr name="typefaceAsset" />
    </declare-styleable>

    <!-- Custom Button -->
    <declare-styleable name="CustomButton">
        <attr name="typefaceAsset" />
    </declare-styleable>

    <!-- Custom EditText -->
    <declare-styleable name="CustomEditText">
        <attr name="typefaceAsset" />
    </declare-styleable>

    <!-- Custom SwitchCompat -->
    <declare-styleable name="CustomSwitchCompat">
        <attr name="typefaceAsset" />
    </declare-styleable>

    <!-- Custom TextInputLayout -->
    <declare-styleable name="CustomTextInputLayout">
        <attr name="typefaceAsset" />
    </declare-styleable>

    <!-- Custom LimitedEditText -->
    <declare-styleable name="LimitedEditText">
        <attr name="typefaceAsset" />
    </declare-styleable>

    <!-- Custom LimitedEditText -->
    <declare-styleable name="CustomCheckBox">
        <attr name="typefaceAsset" />
    </declare-styleable>


    <style name="OpenSansLight">
        <item name="typefaceAsset">fonts/OpenSansLight.ttf</item>
    </style>

    <style name="OpenSansRegular">
        <item name="typefaceAsset">fonts/OpenSansRegular.ttf</item>
    </style>

    <style name="OpenSansSemiBold">
        <item name="typefaceAsset">fonts/OpenSansSemiBold.ttf</item>
    </style>

    <style name="OpenSansBold">
        <item name="typefaceAsset">fonts/OpenSansBold.ttf</item>
    </style>

</resources> 